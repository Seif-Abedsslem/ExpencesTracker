<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/textview_expensecategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="38dp"
        android:text="@string/textview_expense"
        android:textColor="#272727"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="28dp" />

    <TextView
        android:id="@+id/textview_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textview_expensecategory"
        android:layout_marginEnd="61dp"
        android:text="@string/textview_amount"
        android:textColor="#272727"
        android:textSize="18sp"
        android:textStyle="bold"

        android:layout_alignParentRight="true"
        android:layout_marginRight="61dp" />

    <TextView
        android:id="@+id/textview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textview_amount"
        android:layout_marginStart="127dp"
        android:gravity="right"
        android:text="@string/textview_date"
        android:textColor="#272727"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="127dp" />



</RelativeLayout>
