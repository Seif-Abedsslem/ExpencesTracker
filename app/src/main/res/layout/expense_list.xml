<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/textview_expensecategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="34dp"
        android:text="@string/textview_expense"
        android:textColor="#272727"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textview_expensecategory"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        android:text="@string/textview_amount"
        android:textColor="#272727"

        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textview_expensecategory"
        android:layout_marginTop="70dp"
        android:gravity="right"
        android:text="@string/textview_date"
        android:textColor="#272727"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_alignLeft="@+id/textview_expensecategory" />

    <ImageView
        android:id="@+id/imview_category"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textview_expensecategory"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_alignParentLeft="true" />


</RelativeLayout>



